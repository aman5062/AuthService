<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Config</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
        }

        body {
            background: #f4f6f9;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }
        nav {
            height: 60px;
            background: #0f292f;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 40px;
        }

        .logo {
            font-size: 18px;
            font-weight: bold;
        }

        .linkshead {
            display: flex;
            gap: 25px;
            list-style: none;
        }

        .linkshead li a {
            text-decoration: none;
            color: white;
            padding: 6px 12px;
            border-radius: 6px;
            transition: 0.3s;
        }

        .linkshead li a:hover {
            background: white;
            color: #0f292f;
        }


        .content {
            flex: 1;
            overflow-y: auto;
            padding: 30px;
        }

        .card {
            background: white;
            padding: 25px;
            border-radius: 10px;
            max-width: 600px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        }

        h2 {
            margin-bottom: 20px;
            color: #0f292f;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 6px;
            font-weight: 600;
        }

        input, select {
            padding: 8px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        button {
            margin-top: 10px;
            padding: 10px;
            border: none;
            border-radius: 6px;
            background: #0f292f;
            color: white;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #1b4d57;
        }

        #message {
            margin-top: 15px;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <nav>
        <div class="logo">Admin Panel</div>
        <ul class="linkshead">
            <li><a href="/dashboard/config">Config</a></li>
            <li><a href="/dashboard/log">Logs</a></li>
            <li><a href="/dashboard/session">Sessions</a></li>
        </ul>
    </nav>

    <div class="content">
        <div class="card">
            <h2>Configurations</h2>

            <form id="configForm">
                <div class="form-group">
                    <label>Access token time(in minutes)</label>
                    <input type="text" id="access_token">
                </div>

                <div class="form-group">
                    <label>Refresh token time(in days)</label>
                    <input type="number" id="refresh_token">
                </div>
                <!-- <div class="form-group">
                    <label>Session timeout(in minutes)</label>
                    <input type="number" id="session_time">
                </div> -->

                

                <button type="submit">Update Configuration</button>
            </form>

            <p id="message"></p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            try {
                const res = await fetch("/api/admin/config");
                const result = await res.json();
                const data = await result.data[0];
                document.getElementById("access_token").value = data.access_token_expiry_minutes || "";
                document.getElementById("refresh_token").value = data.refresh_token_expiry_days || "";
                // document.getElementById("session_time").value = data.session_timeout_minutes || "";

            } catch (err) {
                console.error("Error fetching config:", err);
            }
        });

        document.getElementById("configForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const updatedData = {
                access_token_expiry_minutes:document.getElementById("access_token").value,
                refresh_token_expiry_days:document.getElementById("refresh_token").value,
                // session_timeout_minutes:document.getElementById("session_time").value
            };

            try {
                const res = await fetch("/api/admin/config", {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(updatedData)
                });

                const result = await res.json();
                if(!result.success){
                  document.getElementById("message").innerText = result.message;
                  document.getElementById("message").style.color = "red";
                }else{
                  document.getElementById("message").innerText = "Configuration Updated Successfully!";
                  document.getElementById("message").style.color = "green";
                }

                

            } catch (err) {
                document.getElementById("message").innerText = "Update Failed!";
                document.getElementById("message").style.color = "red";
            }
        });
    </script>

</body>
</html>
